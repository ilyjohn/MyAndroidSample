
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivityFragment 1">

<ScrollView  android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <Button android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/btnBluetooth"
        android:text="@string/BluetoothText"
        android:onClick="getBluetoothActivity" />

    <Button
        style="@style/CustomButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnWifi"
        android:id="@+id/btnWifi"
        android:onClick="getWifiActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnPlayListTest"
        android:id="@+id/btnPlayList"
        android:onClick="getPlaylistActivity" />

    <Button android:id="@+id/btnStartService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        android:onClick="startService" />

    <Button android:id="@+id/btnStopService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_service"
        android:onClick="stopService"  />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/MyBroadcast"
        android:id="@+id/btnBroadcast"
        android:onClick="myBroadcastIntent" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnStudentActivityText"
        android:id="@+id/btnStudentActivity"
        android:onClick="getStudentActivity"  />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DragDrop"
        android:id="@+id/btnDragDropTest"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Notification "
        android:id="@+id/btnSendNotify"
        android:layout_gravity="bottom" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Land/port"
        android:id="@+id/btnLandPort"
        android:layout_gravity="bottom" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Main_Details"
        android:id="@+id/btnMainDetails"
        android:layout_gravity="bottom" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btnMap"
        android:layout_gravity="bottom" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Slide Menu"
        android:id="@+id/btnMenu"
        android:layout_gravity="bottom" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Star Menu"
        android:id="@+id/btnStarMenu"
        android:layout_gravity="bottom" />

</LinearLayout>

</ScrollView>


</LinearLayout>