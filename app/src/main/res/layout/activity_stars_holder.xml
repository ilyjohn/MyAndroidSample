<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:star="http://schemas.android.com/apk/res/com.example.panlin_pan.myapplication" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panlin_pan.myapplication.starsmenu.StarsHolderActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.panlin_pan.myapplication.starsmenu.StarsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        star:pos="left_top"
        star:radius="10">

    </com.example.panlin_pan.myapplication.starsmenu.StarsView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
